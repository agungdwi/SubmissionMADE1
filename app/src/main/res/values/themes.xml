<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moviedb" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item> <!-- Dark gray -->
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item> <!-- Black -->
        <item name="colorOnPrimary">@color/textPrimary</item> <!-- White -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item> <!-- Blue -->
        <item name="colorSecondaryVariant">@color/white</item> <!-- Blue -->
        <item name="colorOnSecondary">@color/textPrimary</item> <!-- White -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>

    </style>
</resources>